<Page x:Class="UnoApp1.Presentation.MainPage"
      x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      xmlns:local="using:UnoApp1.Presentation"
      xmlns:models="using:UnoApp1.Models">

    <Grid utu:SafeArea.Insets="VisibleBounds">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <utu:NavigationBar Content="{Binding Title}" Grid.Row="0">
            <utu:NavigationBar.PrimaryCommands>
                <AppBarButton Label="Giỏ hàng" 
                  Command="{Binding GoToCartCommand}">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Shop" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </utu:NavigationBar.PrimaryCommands>
        </utu:NavigationBar>

        <GridView Grid.Row="1" 
                ItemsSource="{Binding Products}"
                Padding="10">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource MaterialOutlinedButtonStyle}"
                          Command="{Binding DataContext.GoToDetailCommand, ElementName=PageRoot}"
                          CommandParameter="{Binding}"
                          Margin="5" Padding="0">

                        <StackPanel Width="150" Padding="10">
                            <Image Source="{Binding imageUrl}" Height="120" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding product_name}" FontWeight="Bold" TextWrapping="Wrap" MaxLines="2"/>
                            <TextBlock Text="{Binding price}" Foreground="Red"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
